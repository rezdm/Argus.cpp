{
  "name": "Argus Network Monitor",
  "listen": "127.0.0.1:8080",
  "cache_duration_seconds": 30,
  "static_dir": "pwa",
  "push_notifications": {
    "enabled": true,
    "vapid_subject": "mailto:your-email@example.com",
    "vapid_public_key": "BEl62iUYgUivxIkv69yViEuiBIa-Ib37J8E4VWmJagtRxTWxvHI8SU2xFO8OxJON7vZf6Ip-j4xNK0T1wjxEQxY",
    "vapid_private_key": "PUT_YOUR_PRIVATE_KEY_HERE"
  },
  "monitors": [
    {
      "sort": 1,
      "group": "Web Services",
      "destinations": [
        {
          "sort": 1,
          "name": "Google",
