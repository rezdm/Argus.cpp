          "test": {
            "method": "URL",
            "url": "https://www.google.com"
          }
        },
        {
          "sort": 2,
          "name": "GitHub",
          "timeout": 5000,
          "warning": 2,
          "failure": 3,
          "reset": 2,
          "interval": 30,
          "history": 100,
          "test": {
            "method": "URL",
            "url": "https://github.com"
          }
        }
      ]
    },
    {
      "sort": 2,
      "group": "Network Connectivity",
      "destinations": [
        {
          "sort": 1,
          "name": "DNS Server",
          "timeout": 3000,
          "warning": 2,
          "failure": 3,
          "reset": 2,
          "interval": 60,
          "history": 50,
          "test": {
            "method": "Ping",
