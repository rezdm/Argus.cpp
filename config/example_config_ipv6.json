{
  "name": "Argus++ Network Monitor (IPv6 Example)",
  "listen": "[::1]:8080",
  "ping_implementation": "system_ping",
  "cache_duration_seconds": 30,
  "monitors": [
    {
      "sort": 1,
      "group": "Web Services (IPv6)",
      "destinations": [
        {
          "sort": 1,
          "name": "Google IPv6",
          "timeout": 5000,
          "warning": 2,
          "failure": 3,
          "reset": 2,
          "interval": 30,
          "history": 100,
          "test": {
            "method": "URL",
            "url": "https://www.google.com"
          }
        },
        {
          "sort": 2,
          "name": "Cloudflare IPv6",
          "timeout": 5000,
          "warning": 2,
          "failure": 3,
          "reset": 2,
          "interval": 30,
          "history": 100,
          "test": {
            "method": "URL",
            "url": "https://cloudflare.com"
          }
        }
      ]
    },
    {
      "sort": 2,
      "group": "Network Connectivity (IPv6)",
      "destinations": [
        {
          "sort": 1,
          "name": "Google DNS IPv6",
          "timeout": 3000,
          "warning": 2,
          "failure": 3,
          "reset": 2,
          "interval": 60,
          "history": 50,
          "test": {
            "method": "Ping",
            "host": "2001:4860:4860::8888"
          }
        },
        {
          "sort": 2,
          "name": "Cloudflare DNS IPv6",
          "timeout": 3000,
          "warning": 2,
          "failure": 3,
          "reset": 2,
          "interval": 60,
          "history": 50,
          "test": {
            "method": "Ping",
            "host": "2606:4700:4700::1111"
          }
        },
        {
          "sort": 3,
          "name": "IPv6 Localhost",
          "timeout": 1000,
          "warning": 3,
          "failure": 5,
          "reset": 3,
          "interval": 30,
          "history": 100,
          "test": {
            "method": "Ping",
            "host": "::1"
          }
        }
      ]
    },
    {
      "sort": 3,
      "group": "Port Connectivity (IPv6)",
      "destinations": [
        {
          "sort": 1,
          "name": "Google HTTP IPv6",
          "timeout": 3000,
          "warning": 2,
          "failure": 3,
          "reset": 2,
          "interval": 45,
          "history": 80,
          "test": {
            "method": "Connect",
            "protocol": "TCP",
            "host": "2607:f8b0:4004:c1b::65",
            "port": 80
          }
        },
        {
          "sort": 2,
          "name": "Google HTTPS IPv6",
          "timeout": 3000,
          "warning": 2,
          "failure": 3,
          "reset": 2,
          "interval": 45,
          "history": 80,
          "test": {
            "method": "Connect",
            "protocol": "TCP",
            "host": "2607:f8b0:4004:c1b::65",
            "port": 443
          }
        }
      ]
    },
    {
      "sort": 4,
      "group": "Mixed IPv4/IPv6",
      "destinations": [
        {
          "sort": 1,
          "name": "Dual Stack Host",
          "timeout": 3000,
          "warning": 2,
          "failure": 3,
          "reset": 2,
          "interval": 45,
          "history": 80,
          "test": {
            "method": "Connect",
            "protocol": "TCP",
            "host": "www.google.com",
            "port": 443
          }
        }
      ]
    }
  ]
}